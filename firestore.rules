rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isValidUserProfile() {
      let allowed = ['uid', 'name', 'email', 'phone', 'cpf', 'photoURL',
                    'providerIds', 'createdAtAuth', 'updatedAt', 'lastLoginAt'];
      return request.resource.data.keys().hasOnly(allowed)
        && request.resource.data.uid == request.auth.uid;
    }

    // Dados públicos de campanha usados pela landing page.
    match /campaigns/{campaignId} {
      allow read: if true;
      allow write: if false;
    }

    // Sorteios e ganhadores — visibilidade pública.
    match /draws/{drawId} {
      allow read: if true;
      allow write: if false;
    }

    match /winners/{winnerId} {
      allow read: if true;
      allow write: if false;
    }

    // Perfil do usuário: somente o próprio usuário pode ler e escrever.
    // delete: if false explícito é seguro porque write foi separado em create/update.
    match /users/{uid} {
      allow read: if isOwner(uid);
      allow create, update: if isOwner(uid) && isValidUserProfile();
      allow delete: if false;
    }

    // Registro de CPF para prevenir contas duplicadas.
    // Imutável após criação: update e delete são negados.
    match /cpfRegistry/{cpfId} {
      allow create: if isSignedIn()
        && cpfId.matches('^[0-9]{11}$')
        && request.resource.data.keys().hasOnly(['uid', 'cpf', 'createdAt'])
        && request.resource.data.uid == request.auth.uid
        && request.resource.data.cpf == cpfId;
      allow read: if isSignedIn() && resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    // Coleções sensíveis/transacionais — somente backend via Admin SDK.
    match /orders/{orderId} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if false;
    }

    match /payments/{paymentId} {
      allow read, write: if false;
    }

    match /auditLogs/{logId} {
      allow read, write: if false;
    }

    // Negar tudo que não foi explicitamente permitido acima.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
