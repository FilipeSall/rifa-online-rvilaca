rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Avatares de usuário: leitura pública, escrita apenas pelo próprio usuário.
    // Restringe tamanho máximo (5MB) e tipo de conteúdo (imagem).
    match /users/{userId}/avatar {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
    }

    // Negar todo o resto por padrão.
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
